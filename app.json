{
  "expo": {
    "name": "PantryPal",
    "slug": "pantrypal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Pantrify-Logo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00D68F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foodscanner.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "We use the camera to scan barcodes and receipts for food tracking.",
        "NSPhotoLibraryUsageDescription": "We use your photo library to select images for scanning food items.",
        "NSLocationWhenInUseUsageDescription": "We use location to find nearby stores for your shopping list.",
        "NSUserTrackingUsageDescription": "This allows us to provide personalized food recommendations and improve your experience."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00D68F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.foodscanner.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-barcode-scanner",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "31e4bb21-9a23-4503-9f59-06639b65ab70"
      }
    },
    "owner": "justsyrupryan"
  }
}
